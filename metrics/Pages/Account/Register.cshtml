@page
@model metrics.Pages.Account.Register
@{
    ViewBag.Title = "Вход";
}

<div class="mr-auto ml-auto flex-column text-center">
    <h3><a asp-page="/Account/Login">Войти</a></h3>
    <span>Или</span>
    <h3 class="text-muted">Зарегистрироваться</h3>
    <div asp-validation-summary="All"></div>
    <form method="post" asp-antiforgery="true">
        <div class="form-group">
            <label asp-for="ViewModel.Email"></label>
            <input class="form-control" asp-for="ViewModel.Email" />
            <span class="text-danger" asp-validation-for="ViewModel.Email"></span>
        </div>
        <div class="form-group">
            <label asp-for="ViewModel.Password"></label>
            <input class="form-control" asp-for="ViewModel.Password" />
            <span asp-validation-for="ViewModel.Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ViewModel.ConfirmPassword"></label>
            <input asp-for="ViewModel.ConfirmPassword" class="form-control" />
            <span class="text-danger" asp-validation-for="ViewModel.ConfirmPassword"></span>
        </div>
        <button class="btn btn-primary">Зарегистрироваться</button>
    </form>
</div>